<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/template_panel"
    style="@style/template_panel"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:visibility="gone"
    tools:visibility="visible"
    app:layout_constraintBottom_toTopOf="@+id/bottom_menu_panel"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <ImageView
        android:id="@+id/template_reset"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/reset" />

    <ImageView
        android:id="@+id/template_oval"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/template_reset"
        android:src="@drawable/oval_template" />

    <ImageView
        android:id="@+id/template_rectangle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/template_oval"
        android:src="@drawable/rectangle_template" />

    <ImageView
        android:backgroundTint="@drawable/rectangle_template"
        android:id="@+id/template_custom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/template_rectangle"
        android:src="@drawable/resize" />
</RelativeLayout>